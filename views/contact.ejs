<%- include('partials/header') %>

<!-- CONTACT HERO -->
<section class="contact-hero text-white d-flex align-items-center">
  <div class="container text-center">
    <h1 class="display-4 fw-bold">Get in Touch</h1>
    <p class="lead">We’re here to support your journey in savings, loans, and growth.</p>
  </div>
</section>

<!-- CONTACT INFO SECTION -->
<section class="bg-light py-5 fade-up">
  <div class="container text-center">
    <h4 class="mb-4 fw-bold">Visit Us at Our Office</h4>
    <p><strong>Location:</strong> Galleria Business Park, Seminary Road, Nairobi, Kenya</p>
    <p><strong>Email:</strong> info@deseretsacco.ke</p>
    <p><strong>Phone:</strong> +254 700 123 456</p>
    <p><strong>Open:</strong> Monday to Friday, 8:00am – 5:00pm</p>
  </div>
</section>

<!-- MAP SECTION -->
<section class="fade-up">
  <div class="container">
    <div class="map-container position-relative mb-5">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.7582037180745!2d36.7617333!3d-1.3258618!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x182f1a5a6d9bb4d3%3A0x6f0ed36e01937e20!2sGalleria%20Business%20Park!5e0!3m2!1sen!2ske!4v1720123456789"
        width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
      <a href="https://www.google.com/maps/dir//Galleria+Business+Park,+Seminary+Rd,+Nairobi,+Kenya/"
         target="_blank"
         class="btn btn-primary map-button position-absolute top-50 start-50 translate-middle">
        Get Directions
      </a>
    </div>
  </div>
</section>

<!-- CONTACT FORM SECTION -->
<section class="py-5 fade-up">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3 class="text-center mb-4">Send Us a Message</h3>
        <form>
          <div class="row mb-3">
            <div class="col-md-6">
              <input type="text" class="form-control" placeholder="Full Name" required>
            </div>
            <div class="col-md-6">
              <input type="email" class="form-control" placeholder="Email Address" required>
            </div>
          </div>
          <div class="mb-3">
            <input type="text" class="form-control" placeholder="Phone (optional)">
          </div>
          <div class="mb-3">
            <textarea class="form-control" rows="5" placeholder="Your Message..." required></textarea>
          </div>
          <button type="submit" class="btn btn-primary w-100">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
