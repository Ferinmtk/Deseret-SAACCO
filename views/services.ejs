<%- include('partials/header') %>

<!-- HERO SECTION -->
<section class="services-hero d-flex align-items-center text-white text-center">
  <div class="container">
    <h1 class="display-4 fw-bold">Our Products & Services</h1>
    <p class="lead">Explore our membership options, savings plans, and loan products designed for you.</p>
  </div>
</section>

<!-- SERVICES SECTION -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row text-center g-4">

      <!-- Membership -->
      <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
        <div class="card service-card h-100 shadow-sm border-0" data-bs-toggle="modal" data-bs-target="#membershipModal">
          <div class="card-body py-5">
            <i class="bi bi-people-fill text-primary mb-4" style="font-size: 4rem;"></i>
            <h4 class="fw-bold">Membership</h4>
            <p>Join as an individual or corporate member to access Sacco benefits.</p>
            <span class="btn btn-outline-primary mt-3">Learn More</span>
          </div>
        </div>
      </div>

      <!-- Savings -->
      <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="200">
        <div class="card service-card h-100 shadow-sm border-0" data-bs-toggle="modal" data-bs-target="#savingsModal">
          <div class="card-body py-5">
            <i class="bi bi-piggy-bank-fill text-success mb-4" style="font-size: 4rem;"></i>
            <h4 class="fw-bold">Savings</h4>
            <p>Normal, Holiday, Group, and Family savings accounts.</p>
            <span class="btn btn-outline-success mt-3">Learn More</span>
          </div>
        </div>
      </div>

      <!-- Loans -->
      <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="300">
        <div class="card service-card h-100 shadow-sm border-0" data-bs-toggle="modal" data-bs-target="#loansModal">
          <div class="card-body py-5">
            <i class="bi bi-cash-coin text-warning mb-4" style="font-size: 4rem;"></i>
            <h4 class="fw-bold">Loans & Advances</h4>
            <p>Emergency, Development, School Fees, Vacation, Salary Advance, and more.</p>
            <span class="btn btn-outline-warning mt-3">Learn More</span>
          </div>
        </div>
      </div>

      <!-- Resources -->
      <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="400">
        <a href="/resources" class="text-decoration-none">
          <div class="card service-card h-100 shadow-sm border-0">
            <div class="card-body py-5">
              <i class="bi bi-folder-fill text-danger mb-4" style="font-size: 4rem;"></i>
              <h4 class="fw-bold">Resources</h4>
              <p>Forms, downloads, circulars, news, and more.</p>
              <span class="btn btn-outline-danger mt-3">Explore</span>
            </div>
          </div>
        </a>
      </div>

      <!-- FAQs -->
      <div class="col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="500">
        <a href="/faqs" class="text-decoration-none">
          <div class="card service-card h-100 shadow-sm border-0">
            <div class="card-body py-5">
              <i class="bi bi-question-circle-fill text-secondary mb-4" style="font-size: 4rem;"></i>
              <h4 class="fw-bold">FAQs</h4>
              <p>Common questions about membership, loans, and savings.</p>
              <span class="btn btn-outline-secondary mt-3">View FAQs</span>
            </div>
          </div>
        </a>
      </div>

    </div>
  </div>
</section>

<!-- MODALS -->
<!-- Membership Modal -->
<div class="modal fade" id="membershipModal" tabindex="-1" aria-labelledby="membershipModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Membership Options</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <h6>Individual Membership</h6>
        <ul>
          <li>Registration fee: Kshs. 1,000</li>
          <li>Share Capital: Kshs. 6,500 (non-refundable, earns dividends)</li>
          <li>Monthly deposits: Minimum Kshs. 1,000</li>
        </ul>
        <h6>Corporate Membership</h6>
        <ul>
          <li>Registration fee: Kshs. 5,000</li>
          <li>Share Capital: Kshs. 30,000</li>
          <li>Introductory letter/minutes & recommendation required</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Savings Modal -->
<div class="modal fade" id="savingsModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Savings Accounts</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <ul>
          <li><strong>Normal Savings</strong>: Standard monthly deposits.</li>
          <li><strong>Holiday Savings</strong>: Targeted for festive season needs.</li>
          <li><strong>Group Savings</strong>: For Chamas and community groups.</li>
          <li><strong>Family Savings</strong>: Designed for family goals.</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Loans Modal -->
<div class="modal fade" id="loansModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Loan Products</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <ul>
          <li>Normal Loans</li>
          <li>Emergency Loans</li>
          <li>Development Loans</li>
          <li>Top Up Loans</li>
          <li>School Fees Loans</li>
          <li>Vacation Loans</li>
          <li>Salary Advance Loan</li>
        </ul>
        <p>Affordable interest rates with flexible repayment periods up to 6 years.</p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
