<%- include('../partials/header') %>

<style>
  body {
    background: #f4f8fb;
    font-family: 'Segoe UI', sans-serif;
    color: #222;
  }

  .login-wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .login-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 2.5rem;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    animation: fadeIn 0.6s ease-in-out;
  }

  .login-card h3 {
    font-weight: 600;
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    text-align: center;
    color: #00695c;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-control {
    width: 100%;
    padding: 14px;
    font-size: 1rem;
    border-radius: 10px;
    border: 1px solid #ccc;
    margin-bottom: 1.5rem;
    background-color: #fefefe;
    color: #333;
  }

  .form-control:focus {
    outline: 2px solid #00695c;
    border-color: transparent;
  }

  .btn-primary {
    background: #00695c;
    border: none;
    padding: 12px;
    font-size: 1.1rem;
    color: white;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .btn-primary:hover {
    background: #004d40;
  }

  .btn-google {
    background: #fff;
    color: #444;
    border: 1px solid #ccc;
    font-weight: 500;
    padding: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    gap: 10px;
    transition: background 0.3s ease;
  }

  .btn-google:hover {
    background: #f5f5f5;
  }

  .btn-google img {
    width: 20px;
  }

  .text-center a {
    color: #00695c;
    font-weight: 500;
    text-decoration: none;
  }

  .text-center a:hover {
    text-decoration: underline;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<section class="login-wrapper">
  <div class="login-card" role="form" aria-labelledby="login-header">
    <h3 id="login-header">Member Login</h3>

    <!-- COMMENTED OUT ORIGINAL FORM
    <form>
      <label for="memberId">Member ID</label>
      <input type="text" id="memberId" class="form-control" placeholder="e.g. LDS123456" required aria-required="true">

      <label for="password">Password</label>
      <input type="password" id="password" class="form-control" required aria-required="true">

      <div class="text-end mb-3">
        <a href="/portal/forgot-password" class="text-info" style="font-size: 0.9rem;">Forgot Password?</a>
      </div>

      <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
    -->

    <!-- NEW PLACEHOLDER FORM FOR REDIRECT -->
    <form action="/portal/login" method="POST">
      <label for="memberId">Member ID</label>
      <input type="text" id="memberId" name="memberId" class="form-control" placeholder="e.g. SACCO123456" required>

      <label for="password">Password</label>
      <input type="password" id="password" name="password" class="form-control" required>

      <div class="text-end mb-3">
        <a href="/portal/forgot-password" class="text-info" style="font-size: 0.9rem;">Forgot Password?</a>
      </div>

      <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>

    <div class="text-center my-3">OR</div>

    <button class="btn btn-google w-100" aria-label="Login with Google">
      <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="" />
      Login with Google
    </button>

    <p class="text-center mt-3">Donâ€™t have an account?
      <a href="/portal/signup">Sign Up</a>
    </p>
  </div>
</section>

<%- include('../partials/footer') %>
