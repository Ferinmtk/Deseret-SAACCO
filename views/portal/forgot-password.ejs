<%- include('../partials/header') %>

<style>
  .forgot-wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f4f8fb;
    padding: 2rem;
  }

  .forgot-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 2.5rem;
    width: 100%;
    max-width: 480px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    animation: fadeIn 0.6s ease-in-out;
  }

  .forgot-card h3 {
    font-weight: 600;
    font-size: 1.6rem;
    margin-bottom: 1rem;
    text-align: center;
    color: #2e7d32;
  }

  .form-control {
    width: 100%;
    padding: 14px;
    font-size: 1rem;
    border-radius: 10px;
    border: 1px solid #ccc;
    margin-bottom: 1.5rem;
  }

  .btn-success {
    background: #2e7d32;
    border: none;
    padding: 12px;
    font-size: 1.1rem;
    color: white;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .btn-success:hover {
    background: #1b5e20;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<section class="forgot-wrapper">
  <div class="forgot-card">
    <h3>Reset Your Password</h3>
    <p class="text-center text-muted mb-4">Enter your email address or Member ID and weâ€™ll send you reset instructions.</p>

    <form>
      <input type="text" class="form-control" placeholder="Email or Member ID" required>
      <button type="submit" class="btn btn-success w-100">Send Reset Link</button>
    </form>

    <p class="text-center mt-3">
      <a href="/portal/login" class="text-info">Back to Login</a>
    </p>
  </div>
</section>

<%- include('../partials/footer') %>
