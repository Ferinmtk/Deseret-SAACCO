<%- include('../partials/header') %>

<style>
  body {
    background: #f4f8fb;
    font-family: 'Segoe UI', sans-serif;
    color: #222;
  }

  .signup-wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .signup-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 2.5rem;
    width: 100%;
    max-width: 520px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    animation: fadeIn 0.6s ease-in-out;
  }

  .signup-card h3 {
    font-weight: 600;
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    text-align: center;
    color: #2e7d32;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-control {
    width: 100%;
    padding: 14px;
    font-size: 1rem;
    border-radius: 10px;
    border: 1px solid #ccc;
    margin-bottom: 1.5rem;
    background-color: #fefefe;
    color: #333;
  }

  .form-control:focus {
    outline: 2px solid #2e7d32;
    border-color: transparent;
  }

  .btn-success {
    background: #2e7d32;
    border: none;
    padding: 12px;
    font-size: 1.1rem;
    color: white;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .btn-success:hover {
    background: #1b5e20;
  }

  .text-center a {
    color: #2e7d32;
    font-weight: 500;
    text-decoration: none;
  }

  .text-center a:hover {
    text-decoration: underline;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<section class="signup-wrapper">
  <div class="signup-card" role="form" aria-labelledby="signup-header">
    <h3 id="signup-header">Member Signup</h3>

    <form>
      <label for="memberId">Member ID</label>
      <input type="text" id="memberId" class="form-control" placeholder="e.g. SACCO1234" required aria-required="true">

      <label for="name">Full Name</label>
      <input type="text" id="name" class="form-control" required aria-required="true">

      <label for="email">Email Address</label>
      <input type="email" id="email" class="form-control" required aria-required="true">

      <label for="password">Create Password</label>
      <input type="password" id="password" class="form-control" required aria-required="true">

      <button type="submit" class="btn btn-success w-100">Create Account</button>
    </form>

    <p class="mt-3 text-center">Already have an account? 
      <a href="/portal/login">Login here</a>
    </p>
  </div>
</section>

<%- include('../partials/footer') %>
